import java.io.*;

public class Test4 {
	
	public void a() {	
	
		openReader "tests/text.txt";
		
		String read = "";
		
		String line = reader.readLine();
		
	    while ((line) != null) {
	        read += line;
	        line = reader.readLine();
	    }
		
		System.out.println(read);
		
		openWriter "tests/text.txt";
		
		writer.write(read);
	}
}


